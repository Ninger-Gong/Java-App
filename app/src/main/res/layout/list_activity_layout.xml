<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:outlineAmbientShadowColor="@color/cardview_light_background"
    android:outlineSpotShadowColor="@color/cardview_shadow_start_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/list_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/hatchback" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="65">

            <TextView
                android:id="@+id/list_text_view"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="HatchBack"
                android:layout_marginTop="6dp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/list_engine_size"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="1400cc"
                android:layout_marginLeft="12dp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/list_price_tag"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="24000"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorPrimaryDark" />







        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>